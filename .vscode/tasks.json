{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Blender++",
      "type": "shell",
      "command": "mingw32-make -f makefile.windows -j;\"build/bpp.exe\"",
      "problemMatcher": [
        "$gcc"
      ],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      }
    },
    {
      "label": "Build Blender++ (for outsiders)",
      "type": "shell",
      "command": "pacman -Syu --noconfirm;pacman -S mingw-w64-x86_64-toolchain --noconfirm;pacman -S mingw-w64-x86_64-glfw --noconfirm;pacman -S mingw-w64-x86_64-boost --noconfirm;%BPP_setUpMissingDirsForBuild.bat;mingw32-make -f makefile.windows -j;\"build/bpp.exe\"",
      "problemMatcher": [
        "$gcc"
      ],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      }
    }
  ]
}