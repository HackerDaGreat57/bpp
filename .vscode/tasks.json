{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Blender++",
      "type": "shell",
      "command": "gcc.exe \"src/bpp.c\" \"src/glad.c\" -o \"build/bpp.exe\" -Lglfw3 -Lopengl32 -w -Wall -Wextra -pedantic -pg -g3 -fverbose-asm -Ofast -m64 -mavx2 -static-libstdc++ -static-libgcc -I\"src/include\";\"build/bpp.exe\"",
      "problemMatcher": [
        "$gcc"
      ],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      }
    },
    {
      "label": "Build Blender++ (for outsiders)",
      "type": "shell",
      "command": "pacman -Syu --noconfirm;pacman -S mingw-w64-x86_64-gcc --noconfirm;pacman -S mingw-w64-x86_64-glfw --noconfirm;gcc.exe \"src/bpp.c\" \"src/glad.c\" -o \"build/bpp.exe\" -Lglfw3 -Lopengl32 -w -Wall -Wextra -pedantic -pg -g3 -fverbose-asm -Ofast -m64 -mavx2 -static-libstdc++ -static-libgcc -I\"src/include\";\"build/bpp.exe\"",
      "problemMatcher": [
        "$gcc"
      ],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      }
    }
  ]
}