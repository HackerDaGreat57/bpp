{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Blender++",
      "type": "shell",
      "command": "g++.exe \"src/bpp.cpp\" \"src/glad.c\" -o \"build/bpp.exe\" -lglfw3 -lopengl32 -lglu32 -lgdi32 -luser32 -lkernel32 -w -Wall -Wextra -pedantic -pg -g3 -Ofast -mwindows -m64 -mavx2 -static-libstdc++ -static-libgcc -I\"src/include\";\"build/bpp.exe\"",
      "problemMatcher": [
        "$gcc"
      ],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      }
    },
    {
      "label": "Build Blender++ (for outsiders)",
      "type": "shell",
      "command": "pacman -Syu --noconfirm;pacman -S mingw-w64-x86_64-toolchain --noconfirm;pacman -S mingw-w64-x86_64-glfw --noconfirm;g++.exe \"src/bpp.cpp\" \"src/glad.c\" -o \"build/bpp.exe\" -Lglfw3 -Lopengl32 -Lglu32 -Lgdi32 -Luser32 -Lkernel32 -w -Wall -Wextra -pedantic -pg -g3 -Ofast -m64 -mavx2 -static-libstdc++ -static-libgcc -I\"src/include\";\"build/bpp.exe\"",
      "problemMatcher": [
        "$gcc"
      ],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      }
    }
  ]
}