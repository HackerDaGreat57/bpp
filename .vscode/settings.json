{
  "editor.suggestSelection": "first",
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  "workbench.editor.untitled.hint": "hidden",
  "editor.fontFamily": "Cascadia Code, 'Courier New', monospace",
  "editor.tabSize": 2,
  "editor.cursorBlinking": "smooth",
  "editor.cursorSmoothCaretAnimation": true,
  "git.autofetch": "all",
  "git.enableSmartCommit": true,
  "terminal.explorerKind": "external",
  "terminal.integrated.allowMnemonics": true,
  "externalConsole": true,
  "editor.cursorStyle": "block",
  "git.confirmSync": false,
  "editor.foldingMaximumRegions": 65000,
  "files.autoSave": "afterDelay",
  "C_Cpp.codeAnalysis.updateDelay": 1,
  "files.autoSaveDelay": 800,
  "editor.minimap.showSlider": "always",
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.defaultProfile.windows": "Command Prompt",
  "saveAndRun": {
    "commands": [
      {
        "match": ".cpp",
        "cmd": "%BPP_ROOT%/scripts/build.windows.bat",
        "useShortcut": false,
        "silent": true
      },
      {
        "match": ".c",
        "cmd": "%BPP_ROOT%/scripts/build.windows.bat",
        "useShortcut": false,
        "silent": true
      }
    ]
  },
  "remoteHub.commitDirectlyWarning": "off",
  "terminal.integrated.scrollback": 1000000,
  "terminal.integrated.drawBoldTextInBrightColors": false,
  "terminal.integrated.enableBell": true,
  "terminal.integrated.gpuAcceleration": "on",
  "bookmarks.saveBookmarksInProject": true,
  "bookmarks.label.suggestion": "suggestWhenSelected",
  "bookmarks.experimental.enableNewStickyEngine": false,
  "bookmarks.keepBookmarksOnLineDelete": true,
  "bookmarks.wrapNavigation": false,
  "git.enableCommitSigning": true,
  "security.workspace.trust.untrustedFiles": "open",
  "git.ignoreMissingGitWarning": true
}